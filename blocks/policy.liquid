{{ 'css-section-policy.css' | asset_url | stylesheet_tag }}
{%- assign image 		= block.settings.image -%}
{% assign margin 			= block.settings.margin | split: "|" %}
{% assign padding 			= block.settings.padding | split: "|" %}
<style>
      {%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-block-{{ block.id }} .bwp-widget-policy{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	#shopify-block-{{ block.id }} .bwp-widget-policy .bwp-image{
		max-width:{{block.settings.size}};
	}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1199px){
			#shopify-block-{{ block.id }} .bwp-widget-policy{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-block-{{ block.id }} .bwp-widget-policy{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-block-{{ block.id }} .bwp-widget-policy{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
</style>
<div class="wpbingo-block bwp-widget-policy wpbingo-block--{{ block.id }}">
    <div class="col-banner pos-align-{{ block.settings.align }}">
      <div class="featured-banner bwp-effect-{{ block.settings.effects }}">
          <div class="content-image image-parent">
              <div class="bwp-image image-effect">
                  {%- if image -%}
                      <img class="lazyload fade-in" src="{{ image | img_url:"" }}" width="{{ image.width }}" height="{{ image.height }}" />
                  {%- else -%}
                       <img class="lazyload fade-in" src="{{ 'placeholder.svg' | asset_url }}" alt="image demo" width="200" height="200" />
                  {%- endif -%}
              </div>
          </div>
          <div class="banner-wrapper-infor">
              <div class="info">
                  <div class="content">
                        {% content_for "blocks" %}
                  </div>
              </div>
          </div>
      </div>
    </div>
</div>
