<div class="wpbingo-slideshow__item image-size--{{block.settings.size_img}} image-pos--{{block.settings.pos_img}} image-size-mobi--{{block.settings.size_img_mobi}} image-pos-mobi--{{block.settings.pos_img_mobi}}">
  {%- if block.settings.image == blank -%}
      <img class="lazyload fade-in" src="https://placehold.jp/1920x952.png" width="1920" height="952" />
  {%- else -%}
      {%- if block.settings.image_mobi != blank -%}
          {% render 'img-global' with image: block.settings.image_mobi, class: "wpbingo-slideshow__item-image mobile", effect: "fade-in" %}
          {% render 'img-global' with image: block.settings.image, class: "wpbingo-slideshow__item-image hide_mobile", effect: "fade-in" %}
      {%- else -%}
          {% render 'img-global' with image: block.settings.image, class: "wpbingo-slideshow__item-image", effect: "fade-in" %}
      {%- endif -%}
  {%- endif -%}
  {% content_for "blocks" %}
</div>
