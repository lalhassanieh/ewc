{{ 'css-section-list-link.css' | asset_url | stylesheet_tag }}
{%- assign heading          = block.settings.title | escape -%}
{% assign margin 			= block.settings.margin | split: "|" %}
{% assign padding 			= block.settings.padding | split: "|" %}
<style>
    {%- if margin[0] != blank or padding[0] != blank -%}
        #shopify-block-{{ block.id }} .bwp-list_link{
            {%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
            {%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
        }
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank -%}
		@media (max-width:1199px){
			#shopify-block-{{ block.id }} .bwp-list_link{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank -%}
		@media (max-width:991px){
			#shopify-block-{{ block.id }} .bwp-list_link{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank -%}
		@media (max-width:767px){
			#shopify-block-{{ block.id }} .bwp-list_link{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
		}
	{%- endif -%}
  #shopify-block-{{ block.id }} .wpbingo-title__heading{
    font-size:{{ block.settings.font_size }}px;
    line-height:{{ block.settings.line_height }}px;
    font-weight:{{ block.settings.font_weight }};
    letter-spacing:{{ block.settings.letter_spacing }}px;
    color:{{ block.settings.color }};
    text-align:{{ block.settings.align }};
    font-family:var({{ block.settings.font }});
    margin: {{ block.settings.margin_title }};
  }
  #shopify-block-{{ block.id }} .list-item span{
    font-size:{{ block.settings.font_size_list }}px;
    color:{{ block.settings.color_list }};
    font-family:var({{ block.settings.font_list }});
  }
  #shopify-block-{{ block.id }} .list-item span:hover{
    color:{{ block.settings.color_hover }};
  }
  @media(max-width:767px){
    #shopify-block-{{ block.id }} .wpbingo-title__heading{
      font-size:{{ block.settings.font_size_mobi }}px;
      line-height:{{ block.settings.line_height_mobi }}px;
      letter-spacing:{{ block.settings.letter_spacing_mobi }}px;
      color:{{ block.settings.color_mobi }};
      text-align:{{ block.settings.align_mobi }};
      margin: {{ block.settings.margin_title_mobi }};
    }
  }
</style>
<div class="wpbingo-block bwp-widget-list_link wpbingo-block--{{ block.id }} overflow-hidden">
    <div class="list-content{% if block.settings.show_accordion %} active_accordion show{% endif %}" >
        {%- if heading != blank -%}
          <{{ block.settings.heading_size }} class="wpbingo-title__heading">{{ heading }}</{{ block.settings.heading_size }}>
        {%- endif -%}
        <ul class="bwp-list_link list-style-{{ block.settings.list_style }}">
            {% content_for "blocks" %}
        </ul>
    </div>
</div>
