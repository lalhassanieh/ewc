{%- style -%}
#shopify-section-{{ section.id }} .wpbingo-widget-lookbook .subtitle{
    font-size: {{ block.settings.font_size_subtitle }}px;
    line-height: {{ block.settings.line_height_subtitle }}px;
    font-weight: {{ block.settings.font_weight_subtitle }};
    color:{{ block.settings.color_subtitle }};
    margin:{{ block.settings.margin_subtitle }};
    text-transform: {{ block.settings.text_transfrom_subtitle }};
    font-family:var({{ block.settings.font_subtitle }});
}
#shopify-section-{{ section.id }} .wpbingo-widget-lookbook .title{
    font-size: {{ block.settings.font_size_title }}px;
    line-height: {{ block.settings.line_height_title }}px;
    font-weight: {{ block.settings.font_weight_title }};
    color:{{ block.settings.color_title }};
    letter-spacing:{{ block.settings.letter_spacing_title }}px;
    margin:{{ block.settings.margin_title }};
    text-transform: {{ block.settings.text_transfrom_title }};
    font-family:var({{ block.settings.font_title }});
}
#shopify-section-{{ section.id }} .wpbingo-widget-lookbook .wpbingo-button>a{
    font-size:{{ block.settings.font_size_button }}px;
    line-height:{{ block.settings.line_height_button }}px;
    font-weight:{{ block.settings.font_weight_button }};
    letter-spacing:{{ block.settings.letter_spacing_button }}px;
    color:{{ block.settings.color_button }};
    background:{{ block.settings.background_button }};
    border-radius:{{ block.settings.border_radius_button }};
    text-transform: {{ block.settings.text_transfrom_button }};
    font-family:var({{ block.settings.font_button }});
    padding:{{ block.settings.padding_button }};
    {%- if block.settings.border -%}
        border-width:{{ block.settings.border_width }};
        border-color:{{ block.settings.border_color }};
        border-style:solid;
    {%- endif -%}
}
#shopify-section-{{ section.id }} .wpbingo-widget-lookbook .wpbingo-button>a:hover{
    background:{{ block.settings.background_hover }};
    color:{{ block.settings.color_button_hover }};
    {%- if block.settings.border -%}
        border-color:{{ block.settings.border_color_hover }}; 
    {%- endif -%}
}
