{% assign margin 			= block.settings.margin | split: "|" %}
{% assign padding 			= block.settings.padding | split: "|" %}
{% assign min_width 			= block.settings.min_width | split: "|" %}
<style>
    #shopify-block-{{ block.id }} .wpbingo-button>a{
        {%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
        {%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
        font-size:{{ block.settings.font_size }}px;
        line-height:{{ block.settings.line_height }}px;
        font-weight:{{ block.settings.font_weight }};
        letter-spacing:{{ block.settings.letter_spacing }}px;
        color:{{ block.settings.color }};
        background:{{ block.settings.background }};
        border-radius:{{ block.settings.border_radius }};
        font-family:var({{ block.settings.font }});
        {%- if block.settings.border -%}
            border-width:{{ block.settings.border_width }};
            border-color:{{ block.settings.border_color }};
            border-style:{{ block.settings.border_style }};
        {%- endif -%}
        {%- if min_width[0] != blank -%}
            min-width: {{ min_width[0] }};
        {%- endif -%}
    }
    #shopify-block-{{ block.id }} .wpbingo-button{
        text-align:{{ block.settings.align }};
    }
    #shopify-block-{{ block.id }} .wpbingo-button>a:hover{
        background:{{ block.settings.background_hover }};
        color:{{ block.settings.color_hover }};
        {%- if block.settings.border -%}
            border-color:{{ block.settings.border_color_hover }}; 
        {%- endif -%}
    }
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_1.bwp-button:before,
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_1.bwp-button:after{
        background:{{ block.settings.background_hover }};
    }
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_1.bwp-button .bwp-button-content-wrapper:before,
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_1.bwp-button .bwp-button-content-wrapper:after{
        background:{{ block.settings.background_hover }};
    }
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_2.bwp-button:before{
        background:{{ block.settings.background_hover }};
    }
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_3.bwp-button:before{
        border-color: transparent transparent transparent {{ block.settings.border_color }};
    }
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_3.bwp-button:after{
        border-color: transparent {{ block.settings.border_color }} transparent transparent;
    }
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_4.bwp-button:before,
    #shopify-block-{{ block.id }} .wpbingo-button .hover_style_4.bwp-button:after{
