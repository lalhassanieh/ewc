<div class="wpbingo-button">
    <a class="bwp-button {{ block.settings.button_hover }}" href="{{ block.settings.button_link }}">
        <span class="bwp-button-content-wrapper">
            <span class="bwp-button-text">{{ block.settings.title }}</span>
        </span>
        {%- unless block.settings.icon_title == blank -%}
            <span class="bwp-button-icon">
                <i class="{{ block.settings.icon_title }}"></i>
            </span>
        {%- endunless -%}
    </a>
