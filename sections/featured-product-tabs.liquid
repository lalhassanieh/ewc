<section class="wpbingo-section--{{ section.id }} wpbingo-section--product-tabs {{ section.settings.layout_product }} product-tabs overflow-hidden">
  <div class="{{ container }}" {{ max_width }}>
    <div class="wpbingo-section__inner">
      <div class="wpbingo-section__content">
        {%- if section.blocks.size > 0 -%}
			<div class="product-tabs__nav">
				<ul class="nav">
					{%- for block in section.blocks -%}
						{%- if block.type == "tab" -%}
							{%- assign tab_heading =  block.settings.title | escape -%}
							<li class="nav-item product-tabs__nav-item">
								<a class="product-tabs__nav-link{% if forloop.first %} active{% endif %}" data-toggle="tab" href="#product-tabs-{{ section.id }}{{ forloop.index }}">
									{{ tab_heading }}
								</a>
							</li>
						{%- endif -%}
					{%- endfor -%}
				</ul>
			</div>
			<div class="tab-content product-tabs__content content-product-list bwp_slider-carousel{% if section.settings.half_slider != blank %} bwp_slick-margin-mobile{% endif %}">
				{%- for block in section.blocks -%}
					{%- assign collection_handle = block.settings.collection -%}
					{%- assign limit = block.settings.limit | plus: 0 -%}

					{%- if collection_handle and collections[collection_handle] -%}
						{%- assign collection_count = collections[collection_handle].products_count -%}
						{%- assign tab_total_products = limit | at_most: collection_count -%} 
						<div class="tab-pane fade{% if forloop.first %} show active{% endif %}" id="product-tabs-{{ section.id }}{{ forloop.index }}">
							<div class="js-carousel slick-carousel" data-nav="{{ nav }}" data-infinite="{{ infinite }}" data-autoplay="{{ autoplay }}" data-autoplayspeed="{{ autoplay_speed }}" 
								data-columns="{{ columns }}" 
								data-column1440="{{ column1440 }}" 
								data-column1="{{ column1 }}" 
								data-column2="{{ column2 }}" 
								data-column3="{{ column3 }}" 
								data-column4="{{ column4 }}">
								{%- assign j = 1 -%}
								{%- for product in collections[collection_handle].products limit: limit -%}
									{%- assign modulo = j | modulo:row -%}
										{%- if modulo == 1 or row == 1 -%}
											<div class="slick-carousel__item">
										{%- endif -%}
											{% include 'product-grid-item' %}
										{%- if modulo == 0 or forloop.last == true or row == 1 -%}
											</div>
										{%- endif -%}
									{%- assign j = j | plus: 1 -%}
								{%- endfor -%}
							</div>
							{%- if pag_fraction -%}
								<div class="pagination-fraction">
									<div class="fraction">
										<button class="btn-products prev"><i class="icon-arrow-left"></i></button>
										<div class="slider-pagination-fraction">
											<span class="pagination-current-products">1</span>
											{{ '/' }}
											<span class="pagination-total-products">{{ tab_total_products }}</span>
										</div>
										<button class="btn-products next"><i class="icon-arrow-right"></i></button>
									</div>
								</div>
							{%- endif -%}
						</div>
					{%- endif -%}
				{%- endfor -%}
			</div>
        {%- else -%}
			<div class="wpbingo-section__empty">
				<div class="rte text-center">
					{{ 'home_page.onboarding.no_content' | t }}
				</div>
			</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

