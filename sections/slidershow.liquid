			"default": "#000000"
		},
		{
			"type": "header",
			 "content": "Slick dots"
		},
		{
			"type": "text",
			"id": "border_dots",
			"label": "Border dots",
			"default": "0px 0px 0px 0px",
			"info": "Ex: 0px 0px 0px 0px"
		},
		{
			"type": "text",
			"id": "border_radius_dots",
			"label": "Border radius dots",
			"default": "0px 0px 0px 0px",
