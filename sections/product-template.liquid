{%- assign current_variant 			= product.selected_or_first_available_variant -%}
{%- assign media_layout 			= section.settings.media_layout -%}
{%- assign countdowns 				= product.metafields.bwp_fields.countdowns -%}
{%- assign external 				= product.metafields.bwp_fields.external -%}
{%- assign group_product 			= product.metafields.bwp_fields.group_product -%}
{%- assign group_product_array		= group_product | split: "," -%}
{%- assign size_chart 				= product.metafields.bwp_fields.size_chart -%}
{%- assign bundler 					= product.metafields.bwp_fields.bundler -%}
{%- assign buy_it_with 				= product.metafields.bwp_fields.buy_it_with | plus: 0 -%}
{%- assign full_description 		= product.description -%}

{%- assign filter_name_1 			= settings.filter_name_1 -%}
{%- assign select_filter_1 			= settings.select_filter_1 -%}
{%- assign filter_name_2 			= settings.filter_name_2 -%}
{%- assign select_filter_2 			= settings.select_filter_2 -%}
{%- assign filter_name_3 			= settings.filter_name_3 -%}
{%- assign select_filter_3 			= settings.select_filter_3 -%}
{%- assign short_description 		= product.metafields.bwp_fields.shortdesc -%}

{%- assign first_3d_model 			= product.media | where: "media_type", "model" | first -%}
{%- assign full_width 				= false -%}

{%- if media_layout == "slider" -%}
	{%- assign full_width 			= true -%}
{%- endif -%}
{%- if media_layout == "thumbnails" or media_layout == "lagre-gallery" -%}
	{%- assign sticky 				= true -%}
{%- endif -%}
{%- assign nothum = false -%}
{%- if media_layout == "lagre-gallery" or media_layout == "slider" -%}
	{%- assign nothum 				= true -%}
{%- endif -%}

<section class="wpbingo-section wpbingo-section--{{ section.id }}" style="background:{{ section.settings.bg_section }};padding:{{ section.settings.padding_section }};">
<div class="container{% if full_width  %} container-full-image{% endif %}">
	<div class="product" itemscope itemtype="http://schema.org/Product"
    data-section-id="{{ section.id }}"
    data-section-type="product-template"
    data-enable-history-state="true"
	data-nothum="{{ nothum }}"
    data-stacked-layout="{% if media_layout == "stacked" or media_layout == "gird-mordern" or media_layout == "gird-two" or media_layout == "gird-sticky" %}true{% else %}false{% endif %}"
    {% if first_3d_model %}data-has-model="true"{% endif %}>
		<div class="product-single product__primary {{ media_layout }}" data-layout_thumb="{{ media_layout }}" data-popup="false">
			<div class="row">
				<div class="bwp-single-content{% if section.settings.show_sidebar %} {{ section.settings.position_sidebar }} col-xl-9 col-lg-12 col-md-12 col-12{% else %} col-12 col-lg-12 col-md-12 col-12{% endif %}">
					<div class="row sticky">
						<div class="bwp-single-image col-lg-7 col-md-12 col-12">
							{% include 'product-media' %}
						</div>
						<div class="bwp-single-info col-lg-5 col-md-12 col-12 ">
							<div class="product-single__metas{% if section.settings.product_button_wishlist %} wishlist{% endif %}">
								{%- for block in section.blocks -%}
									{%- case block.type -%}
                                        {%- when '@app' -%}
                                          {% render block %}
										{%- when 'rating' -%}
											{%- if settings.product_reviews_enable -%}
												<div class="product-single__reviews product-review">
													<!-- Start of Judge.me code --> 
														<div style='{{ jm_style }}' class='jdgm-widget jdgm-preview-badge'  data-id='{{ product.id }}'>
														  {{ product.metafields.judgeme.badge }}
														</div>  
													<!-- End of Judge.me code -->
												</div>
											{%- endif -%}
										{%- when 'title' -%}
											<h1 class="product-single__title" style="margin:{{ block.settings.product_title_margin }};--title-color:{{ block.settings.title_color }};--title-text-transform:{{ block.settings.title_transform }};--title-font-size:{{ block.settings.title_size }}px;" itemprop="name">{{ product.title }}</h1>
										{%- when 'price' -%}
											{%- if group_product != blank -%}
												<div class="price-container" style="margin:{{ block.settings.product_price_margin }};--price-color:{{ block.settings.price_color }};--price-color-sale:{{ block.settings.price_color_sale }};--price-color-on-sale:{{ block.settings.price_color_on_sale }};--price-font-size:{{ block.settings.price_size }}px;--price-font-size-sale:{{ block.settings.price_size_sale }}px;">
													{% for group_ids in group_product_array %}
														{% assign product_id = group_ids | plus: 0 %}
														{% paginate collections.all.products by 1000 %}
															{% for product in collections.all.products %}
																{%- if product.id == product_id -%}
																	{%- for variant in product.variants -%}
																		{% assign prices =  prices | append: variant.price | append: ',' %}
																	{% endfor %}
																{%- endif -%}
															{% endfor %}
														{% endpaginate %}
													{% endfor %}
													{% assign operator_prices	= prices | split: "," %}
													{% assign min_price = operator_prices[0] | plus: 0 %}
													{% assign max_price = operator_prices[0] | plus: 0 %}
													{% for operator_price in operator_prices %}
														{% assign operator = operator_price | plus: 0 %}
														{% assign min_price		 = min_price | plus: 0 %}
														{% assign max_price		 = max_price | plus: 0 %}
														{% if operator < min_price %}
															{% assign min_price = operator %}
														{% endif %}
														{% if operator > max_price %}
															{% assign max_price = operator %}
														{% endif %}		
													{% endfor %}
													{{  min_price | money }} - {{  max_price | money }}
												</div>
											{% else %}
												<div class="price-single-product" style="margin:{{ block.settings.product_price_margin }};--price-color:{{ block.settings.price_color }};--price-color-sale:{{ block.settings.price_color_sale }};--price-color-on-sale:{{ block.settings.price_color_on_sale }};--price-font-size:{{ block.settings.price_size }}px;--price-font-size-sale:{{ block.settings.price_size_sale }}px;">
													{% include 'product-price', variant: current_variant %}
												</div>
											{% endif %}			
										{%- when 'vendor' -%}
												<div class="product__vendor"{% if block.settings.product_vendor_margin != blank %} style="margin:{{ block.settings.product_vendor_margin }}"{% endif %}>
													<div class="product__organization__label">{{ 'products.product.vendor' | t }}</div>
													<div class="product__organization__text"><a href="/collections/vendors?q={{ product.vendor }}">{{ product.vendor }}</a></div>
												</div>
										{%- when 'inventory' -%}
											<div class="inventory-content" style="margin:{{ block.settings.product_inventory_margin }};--inventory-color:{{ block.settings.inventory_color }};--inventory-outstock-color:{{ block.settings.inventory_outstock_color }};--inventory-font-size:{{ block.settings.inventory_size }}px;">
												{% if current_variant.inventory_management == "shopify" and current_variant.inventory_policy != "continue" %}
													{% if current_variant.inventory_quantity > 0 %}
														<div id="variant-inventory"><i class="wpb-icon-in-stock"></i>{{'products.product.in_stock' | t }}</div>
													{% else %}
														<div id="variant-inventory" class="out_stock"><i class="wpb-icon-in-stock"></i>{{'products.product.out_stock' | t }}</div>
													{% endif %}
												{% else %}
													<div id="variant-inventory"><i class="wpb-icon-in-stock"></i>{{'products.product.in_stock' | t }}</div>
												{% endif %}
											</div>
										{%- when 'product_count_sale' -%}
											{% if current_variant.available %}
												{%- assign count = block.settings.product_sale_count | split: "-" -%}
												{%- assign time = block.settings.product_sale_time | split: "-" -%}
												<div class="product-count-sale" data-min="{{ count[0] }}" data-max="{{ count[1] }}" data-time_min="{{ time[0] }}" data-time_max="{{ time[1] }}" data-id_product="{{ product.id }}" style="margin:{{ block.settings.product_count_sale_margin }};--count-sale-color:{{ block.settings.count_sale_color }};">
													{% include 'fire' %}<span class="count"></span> {{ block.settings.product_count_sale_text }} <span class="time"></span> {{ block.settings.product_count_sale_unit }}
												</div>
											{% endif %}
										{%- when 'product_real_time' -%}
											{%- assign count = block.settings.product_real_time_count | split: "-" -%}
											<div class="product-count-view" data-min="{{ count[0] }}" data-max="{{ count[1] }}" data-timeout="{{ block.settings.product_real_time_change }}" data-id_product="{{ product.id }}" style="margin:{{ block.settings.product_real_time_margin }};--real-time-color:{{ block.settings.real_time_color }};">
												<i class="wpb-icon-eye"></i><span></span> {{ block.settings.product_real_time_text }}
											</div>
										{%- when 'countdowns' -%}
											{%- if countdowns != blank -%}
											<div class="countdown-single"{% if block.settings.product_countdowns_margin != blank %} style="margin:{{ block.settings.product_countdowns_margin }}"{% endif %}>
												<div class="title-countdown">
													<span class="icon">
														<svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" width="1em" height="1em" x="0" y="0" viewBox="0 0 443.294 443.294" style="enable-background:new 0 0 512 512" xml:space="preserve" class=""><g><path d="M221.647 0C99.433 0 0 99.433 0 221.647s99.433 221.647 221.647 221.647 221.647-99.433 221.647-221.647S343.861 0 221.647 0zm0 415.588c-106.941 0-193.941-87-193.941-193.941s87-193.941 193.941-193.941 193.941 87 193.941 193.941-87 193.941-193.941 193.941z" fill="" opacity="1" data-original="" class=""></path><path d="M235.5 83.118h-27.706v144.265l87.176 87.176 19.589-19.589-79.059-79.059z" fill="" opacity="1" data-original="" class=""></path></g></svg>
													</span>
													<label>{{ block.settings.product_countdown_title }}</label>
												</div>
												<div class="countdown" data-countdown_single="{{ countdowns }}" data-day="{{ block.settings.product_countdown_day }}" data-hour="{{ block.settings.product_countdown_hour }}" data-min="{{ block.settings.product_countdown_min }}" data-sec="{{ block.settings.product_countdown_sec }}"></div>
											</div>
											{%- endif -%}
										{%- when 'shipping_policy' -%}
											<div class="product-single__policies rte"{% if block.settings.product_shipping_policy_margin != blank %} style="margin:{{ block.settings.product_shipping_policy_margin }}"{% endif %}>
												{%- if shop.taxes_included -%}
													{{ 'products.general.include_taxes' | t }}
												{%- endif -%}
												{%- if shop.shipping_policy.body != blank -%}
													{{ 'products.general.shipping_policy_html' | t: link: shop.shipping_policy.url }}
												{%- endif -%}
											</div>
										{%- when 'form_atc' -%}
											{% include 'single-form-atc' %}
										{%- when 'pick_up' -%}	
											{% assign url_image = product.featured_media.preview_image | image_url:width:100 %}
											<div class="product-single__pick_up" data-src="{{ url_image }}" data-store-availability-container data-product_title="{{ product.title }}" data-id="{{ product.selected_or_first_available_variant.id }}" data-only_variant="{{ product.has_only_default_variant }}" data-base-url="{{ routes.root_url }}" {% if block.settings.product_pick_up_margin != blank %} style="margin:{{ block.settings.product_pick_up_margin }}"{% endif %}>
											</div>
										{%- when 'ask-share' -%}
											<div class="ask-share"{% if block.settings.product_ask-share_margin != blank %} style="margin:{{ block.settings.product_ask-share_margin }}"{% endif %}>
												{%- if product.handle != blank and section.settings.product_button_compare -%}
												<div class="button-compare" data-title="{{ 'products.product.compare' | t }}">
													<button type="button" aria-label="{{ 'products.product.compare' | t }}" class="" button-compare data-product-handle="{{ product.handle }}">{{ 'products.product.compare' | t }}</button>
												</div>
												{% endif %}
												{% include 'ask-a-question-form' %}
												{%- if block.settings.delivery_return -%}
												<div class="delivery_return">
													<div class="delivery_return-title"><i class="wpb-icon-package"></i>{{ block.settings.delivery_return_title }}</div>
													<div class="delivery_return-content">
														<div class="delivery_return-close full"></div>
														<div class="content-shipping">
															<div class="delivery_return-close"></div>
															{%- if block.settings.delivery_return_heading -%}
																<div class="title_shiping"><h2>{{ block.settings.delivery_return_heading }}</h2></div>
															{% endif %}
															{%- if block.settings.delivery_return_content -%}
															<div class="product-shipping">
																{{ block.settings.delivery_return_content }}
															</div>
															{% endif %}
														</div>
													</div>
												</div>
												{% endif %}
												{% if block.settings.social_sharing_products %}
													{% assign full_url = request.host | append: request.path %}
													<div class="product_share">
														<div class="product_share_label"><i class="feather-share-2"></i>{{ block.settings.product_share_title }}</div> 
														<div class="product_share-content">
															<div class="product_share-close full"></div>
															<div class="content-product_share">
																<div class="product_share-close"></div>
																<div class="product_share-social">
																	<div class="product_share-copy" data-text="{{ 'products.product.share_copy' | t }}">
																		<label>{{ 'products.product.share_copy' | t }}</label>
																		<div class="content">
																			<input class="url_share" type="text" value="{{ full_url }}">
																			<button>copy</button>
																		</div>
																	</div>
																	<div class="product_share-icon">
																		<label>{{ block.settings.product_share_title }}</label>
																		{% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product.featured_media %}
																	</div>
																</div>
															</div>
														</div>
													</div>
												{% endif %}
											</div>
										{%- when 'estimated_delivery' -%}
											{%- for variant in product.variants -%}
												{% if variant.incoming %}
													{%- assign incoming = true -%}
												{%- endif -%}
											{%- endfor -%}
											{% if current_variant.available %}
												<div class="section-estimated_delivery"{%- if incoming -%} data-incoming="true"{%- endif -%}{% if block.settings.product_estimated_delivery_margin != blank %} style="margin:{{ block.settings.product_estimated_delivery_margin }}"{% endif %}>
													<div class="estimated_delivery"{%- if current_variant.next_incoming_date and current_variant.inventory_quantity == 0 -%} data-date_now="{{ current_variant.next_incoming_date }}"{%- endif -%} data-number_day="{%- if current_variant.incoming and current_variant.inventory_quantity == 0 -%}{{ block.settings.estimated_delivery_day_preorder }}{%- else -%}{{ block.settings.estimated_delivery_day }}{%- endif -%}">
														<div class="icons"><i class="wpb-icon-shipping3"></i></div>
														<div class="content">{{ 'products.product.time_delivery_html' | t }}</div>
													</div>
												</div>
											{%- endif -%}
										{%- when 'buy_with' -%}
											{%- if buy_it_with != 0 -%}
											{% paginate collections.all.products by 1000 %}
												{% for product in collections.all.products %}
													{%- if product.id == buy_it_with -%}
													<div class="buy_it_with"{% if block.settings.product_buy_with_margin != blank %} style="margin:{{ block.settings.product_buy_with_margin }}"{% endif %}>
														<div class="content-left">
															<h2>{{block.settings.buy_it_with_title}}</h2>
															<div class="name-products"><a href="{{ product.url }}">{{ product.title }}</a></div>
															<div class="product-price">{{ product.price | money }}</div>
															<a class="view-product" href="{{ product.url }}" >{{block.settings.buy_it_with_button}}</a>
														</div>
														<div class="content-right">
															<div class="product-thumb">
																<a href="{{ product.url }}">
																	{% include 'img-global' with image: product.featured_image, class: "featured-banner__img", effect: "fade-in" %}
																</a>
															</div>
														</div>
													</div>
													{%- endif -%}
												{%- endfor -%}
											{% endpaginate %}
											{%- endif -%}
										{%- when 'buy_more' -%}
											{%- assign collection = block.settings.buy_more_collection -%}
											{%- assign discount = false -%}
											{%- assign disible = false -%}
											{%- for product_discount in collections[collection].products -%}
												{%- if product_discount.id == product.id -%}
													{%- assign discount = true -%}
												{%- endif -%}
											{%- endfor -%}
											{%- if discount -%}
											{%- for variant in product.variants -%}
												{% assign number_variant = number_variant | plus: 1 %}
											{%- endfor -%}
											<form method="post" id="buy_more_form" action="/cart/add" enctype="multipart/form-data" novalidate="novalidate">
												<input type="hidden" name="form_type" value="product">
												<input name="items[][quantity]" type="number" value="{{ block.settings.buy_more_quatily }}" class="hide hidden">
													{%- for variant in product.variants -%}
														{%- if forloop.first -%}
															<input name="items[][id]" type="hidden" value="{{ variant.id  }}">
														{%- endif -%}
													{%- endfor -%}
												<div class="buy_more" style="--bg-buy-more:{{ block.settings.product_buy_more_color }}" data-quatily="{{ block.settings.buy_more_quatily }}"{% if block.settings.product_buy_more_margin != blank %} style="margin:{{ block.settings.product_buy_more_margin }}"{% endif %}>
													<div class="buy_more-content">
														{%- if block.settings.buy_more_title -%}
															<div class="title">{{ block.settings.buy_more_title }}</div>
														{%- endif -%}
														<div class="discount-content">
															{%- if block.settings.buy_more_content -%}
															<div class="content-left">
																{{ block.settings.buy_more_content }}
															</div>
															{%- endif -%}
															<div class="content-right">
																<button type="submit" class="btn--add-to-cart buy-more-cart">{{ 'products.product.add_discount' | t }}</button>
															</div>
														</div>
													</div>
												</div>
											</form>
											{%- endif -%}
										{%- when 'trust_barget' -%}
											<div class="product_trust_barget" style="{% if block.settings.product_trust_barget_margin != blank %}margin:{{ block.settings.product_trust_barget_margin }}{% endif %};--bg-trust-barget:{{ block.settings.trust_barget_bg }};">
												<div class="content_trust_barget">
													{%- if block.settings.trust_barget_title -%}
														<div class="title">{{ block.settings.trust_barget_title }}</div>
													{%- endif -%}
													{%- if block.settings.image -%}
														<img class="trust_barget_img lazyload" data-src="{{ block.settings.image | image_url:width:block.settings.image.width,height:block.settings.image.height }}" alt="{{ block.settings.image.alt | escape }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}" />
													{%- endif -%}
												</div>
											</div>
										{%- when 'buy_together' -%}
											{%- include 'image-buy-together' -%}
										{%- when 'product_sku' -%}
											{%- if product.selected_or_first_available_variant.sku != blank -%}
											<div class="product__organization">
												<div class="product__organization__label">{{ 'products.product.sku' | t }}</div>
												<div class="js-variant-sku product__organization__text">{{ product.selected_or_first_available_variant.sku }}</div>
											</div>
											{%- endif -%}
										{%- when 'product_type' -%}
											{%- if product.type contains "label" -%}
											{%- elsif product.type != blank -%}
												<div class="product__organization">
													<div class="product__organization__label">{{ 'products.product.type' | t }}</div>
													<div class="product__organization__text">{{ product.type }}</div>
												</div>
											{%- endif -%}
										{%- when 'product_collection' -%}
											<div class="product__collection" style="margin:{{ block.settings.collection_margin }};--collection-color:{{ block.settings.collection_color }};--collection-color-hover:{{ block.settings.collection_color_hover }};--collection-text-transform:{{ block.settings.collection_transform }};--collection-font-size:{{ block.settings.collection_size }}px;">
												{%- if collection -%}
													{%- if collection.handle -%}
														{%- capture url -%}/collections/{{ collection.handle }}{%- endcapture -%}
														<a href="{{ url }}" title="{{ collection.title }}">
															{{ collection.title }}
														</a>
													{%- endif -%}
												{%- else -%}
													{%- assign collection = product.collections | first -%}
													<a href="{{ collection.url }}" title="{{ collection.title }}">
														{{ collection.title }}
													</a>
												{%- endif -%}
											</div>
										{%- when 'short_description' -%}
											<div class="short_description" style="margin:{{ block.settings.description_margin }};--description-color:{{ block.settings.description_color }};--description-font-size:{{ block.settings.description_size }}px;">
												{{ short_description }}
											</div>
										{%- when 'product_tags' -%}
											{%- assign limit = block.settings.product_tags_limit -%}
											<div class="product__organization">
												{%- if block.settings.product_tags_title != blank -%}
													<div class="product__organization__label">{{ block.settings.product_tags_title }}</div>
												{%- endif -%}
												{% for tag in product.tags limit:limit %}
													{%- if forloop.last -%}
														<span>{{ tag }}</span>
													{%- else -%}
														<span>{{ tag }}, </span>
													{%- endif -%}
												{% endfor %}
											</div>
										{%- when 'product_tab' -%}
											{% include 'accordion_information' %}
										{%- when 'border' -%}
											<div class="border-product" style="margin: {{ block.settings.border_space }} ;border-top: {{ block.settings.border_height }}px solid {{ block.settings.border_color }} "></div>
									{%- endcase -%}
								{%- endfor -%}
							</div>
						</div>
					</div>
					<div class="close-sticky"></div>
				</div>
				{% if section.settings.show_sidebar %}
					<div class="toggle-sidebar">{{ 'products.product.sidebar' | t }}</div>
					<div class="bwp-single-sidebar {{ section.settings.position_sidebar }} col-12 col-xl-3 col-lg-12 col-md-12">
						<div class="toggle-sidebar top"><span></span></div>
						<div class="bwp-single-sidebar-content">
							{%- for block in section.blocks -%}
								{%- case block.type -%}
									{%- when 'policy' -%}
										<div class="policy-sidebar" style="margin:{{ block.settings.product_policy_margin }};border-width:{{ block.settings.border_policy_width }};border-style:solid;border-color:{{ block.settings.border_policy_color }};padding:{{ block.settings.padding_policy }}">
											{% if block.settings.svg_policy != blank or block.settings.img_policy != blank %}
												<div class="image">
													{% if block.settings.type_image_policy == "image" %}
														<img class="featured-banner__img lazyload fade-in" src="{{ block.settings.img_policy | image_url:width:block.settings.img_policy.width,height:block.settings.img_policy.height }}" alt="{{ block.settings.img_policy.alt | escape }}" width="{{ block.settings.img_policy.width }}" height="{{ block.settings.img_policy.height }}" />
													{%- else -%}
														{{ block.settings.svg_policy }}
													{%- endif -%}
												</div>
											{%- endif -%}
											{% if block.settings.title_policy != blank or block.settings.desc_policy != blank %}
											<div class="content">
												{% if block.settings.title_policy != blank %}
													<div class="title">{{ block.settings.title_policy }}</div>
												{%- endif -%}
												{% if block.settings.desc_policy != blank %}
													<div class="description">{{  block.settings.desc_policy }}</div>
												{%- endif -%}
											</div>
											{%- endif -%}
										</div>
								{%- endcase -%}
							{%- endfor -%}
							{% if section.settings.collection_sidebar != blank %}
								{%- assign collection = collections[section.settings.collection_sidebar] -%}
								{%- assign limit = section.settings.collection_limit | plus:0 -%}
								<div class="collection-sidebar">
									{% if section.settings.heading_sidebar != blank %}
										<div class="title">{{ section.settings.heading_sidebar }}</div>
									{%- endif -%}
									<div class="content">
										{%- for product in collection.products limit:limit -%}
											<div class="product">
												<div class="image">
													<a href="{{ product.url }}">
														{% include 'img-global' with image: product.featured_image, class: "img-fluid", effect: "fade-in" %}
													</a>
												</div>
												<div class="info">
													{%- if settings.product_card_review -%}
														<div class="product-card__review product-review">
															<!-- Start of Judge.me code --> 
																<div style='{{ jm_style }}' class='jdgm-widget jdgm-preview-badge'  data-id='{{ product.id }}'>
																  {{ product.metafields.judgeme.badge }}
																</div>  
															<!-- End of Judge.me code -->
														</div>
													{%- endif -%}
													<h3 class="product-sidebar__name">
														<a class="product-sidebar__name-link" href="{{ product.url }}" title="{{ product.title }}">{{ product.title }}</a>
													</h3>
													<div class="price">
														{%- if product.compare_at_price -%}
															<span class="price-regular">{{ product.compare_at_price | money }}</span> <span class="price-sale">{{ product.price | money }}</span>
														{%- else -%}
															<span class="product-price">{{ product.price | money }}</span>
														{%- endif -%}
													</div>
												</div>
											</div>
										{%- endfor -%}
									</div>
								</div>
							{%- endif -%}
						</div>
					</div>
