{{ 'css-section-lookbook-intagram.css' | asset_url | stylesheet_tag }}
{%- if section.settings.fullwidth -%}
	{%- assign container = 'container-full' -%}
{%- elsif section.settings.max_width != blank -%}
	{%- assign container = 'bwp-container' -%}
{%- else -%}
	{%- assign container = 'container' -%}
{%- endif -%}

{%- assign max_width = '' -%}
{%- if section.settings.fullwidth == blank and section.settings.max_width != blank -%}
	{%- assign width_container = section.settings.max_width | plus: 0 -%}
	{%- capture max_width -%}style="max-width: {{ section.settings.max_width }};"{%- endcapture -%}
{%- endif -%}

{%- assign margin = '' -%}
{%- if section.settings.margin != blank -%}
  {%- capture margin -%}margin: {{ section.settings.margin }};{%- endcapture -%}
{%- endif -%}

{% assign margin 			= section.settings.margin | split: "|" %}
{% assign padding 			= section.settings.padding | split: "|" %}
{% assign margin_content 	= section.settings.margin_content | split: "|" %}
{% assign padding_item 		= section.settings.padding_item | split: "|" %}
{%- assign nav 				= section.settings.navigation -%}
{%- assign rows 			= section.settings.rows -%}
{%- assign dot 				= section.settings.pagination -%}
{%- assign infinite 		= section.settings.infinite -%}
{%- assign autoplay 		= section.settings.autoplay -%}
{%- assign autoplay_speed 	= section.settings.autoplay_speed | escape -%}
{%- assign columns 			= section.settings.columns -%}
{%- assign column1440 		= section.settings.column1440 -%}
{%- assign column1 			= section.settings.column1 -%}
{%- assign column2 			= section.settings.column2 -%}
{%- assign column3 			= section.settings.column3 -%}
{%- assign column4 			= section.settings.column4 -%}

{%- style -%}
	{%- if section.settings.color_bg != blank -%}
		{%- if section.settings.width_bg == 'full' -%}
			#shopify-section-{{ section.id }}{
				background:{{ section.settings.color_bg }};
			}
		{%- elsif section.settings.width_bg == 'container' -%}
			#shopify-section-{{ section.id }} .wpbingo-section__inner{
				background:{{ section.settings.color_bg }};
				{%- if section.settings.padding_bg != blank -%}padding:{{ section.settings.padding_bg }};{%- endif -%}
			}
		{%- endif -%}
	{%- endif -%}
	{%- if section.settings.fullwidth == blank and section.settings.max_width != blank and width_container > 1200 -%}
		@media (max-width: {{ section.settings.max_width }}) and (min-width: 1200px){
			#shopify-section-{{ section.id }} .bwp-container{
				padding-left:30px;
				padding-right:30px;
			}
		}
	{%- endif -%}
	#shopify-section-{{ section.id }} .lookbook-image img{
		border-radius: {{ section.settings.border_radius }};
	}
	{%- if margin[0] != blank or padding[0] != blank -%}
		#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
			{%- if margin[0] != blank -%}margin: {{ margin[0] }};{%- endif -%}
			{%- if padding[0] != blank -%}padding:{{ padding[0] }};{%- endif -%}
		}
	{%- endif -%}
	{%- if margin_content[0] != blank -%}
		#shopify-section-{{ section.id }} .wpbingo-section--lookbook .slick-list{
			margin: {{ margin_content[0] }};
		}
	{%- endif -%}
	{%- if padding_item[0] != blank -%}
		#shopify-section-{{ section.id }} .wpbingo-section--lookbook .wpbingo-lookbook__item{
			padding: {{ padding_item[0] }};
		}
	{%- endif -%}
	{%- if margin[1] != blank or padding[1] != blank or margin_content[1] != blank or padding_item[1] != blank -%}
		@media (max-width:1200px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[1] != blank -%}margin: {{ margin[1] }};{%- endif -%}
				{%- if padding[1] != blank -%}padding:{{ padding[1] }};{%- endif -%}
			}
			{%- if margin_content[1] != blank -%}
				#shopify-section-{{ section.id }} .wpbingo-section--lookbook .slick-list{
					margin: {{ margin_content[1] }};
				}
			{%- endif -%}
			{%- if padding_item[1] != blank -%}
				#shopify-section-{{ section.id }} .wpbingo-section--lookbook .wpbingo-lookbook__item{
					padding: {{ padding_item[1] }};
				}
			{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[2] != blank or padding[2] != blank or margin_content[2] != blank or padding_item[2] != blank -%}
		@media (max-width:991px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[2] != blank -%}margin: {{ margin[2] }};{%- endif -%}
				{%- if padding[2] != blank -%}padding:{{ padding[2] }};{%- endif -%}
			}
			{%- if margin_content[2] != blank -%}
				#shopify-section-{{ section.id }} .wpbingo-section--lookbook .slick-list{
					margin: {{ margin_content[2] }};
				}
			{%- endif -%}
			{%- if padding_item[2] != blank -%}
				#shopify-section-{{ section.id }} .wpbingo-section--lookbook .wpbingo-lookbook__item{
					padding: {{ padding_item[2] }};
				}
			{%- endif -%}
		}
	{%- endif -%}
	{%- if margin[3] != blank or padding[3] != blank or margin_content[3] != blank or padding_item[3] != blank -%}
		@media (max-width:767px){
			#shopify-section-{{ section.id }} .wpbingo-section--lookbook{
				{%- if margin[3] != blank -%}margin: {{ margin[3] }};{%- endif -%}
				{%- if padding[3] != blank -%}padding:{{ padding[3] }};{%- endif -%}
			}
			{%- if margin_content[3] != blank -%}
				#shopify-section-{{ section.id }} .wpbingo-section--lookbook .slick-list{
					margin: {{ margin_content[3] }};
				}
			{%- endif -%}
			{%- if padding_item[3] != blank -%}
				#shopify-section-{{ section.id }} .wpbingo-section--lookbook .wpbingo-lookbook__item{
					padding: {{ padding_item[3] }};
				}
			{%- endif -%}
		}
	{%- endif -%}
{%- endstyle -%}
<section class="wpbingo-section wpbingo-section--lookbook {% if section.settings.show_hover %} hover_image{% endif %} lookbook-instagram-slider wpbingo-section--{{ section.id }}" data-id="{{ section.id }}">
    <div class="{{ container }}" {{ max_width }}>
        <div class="wpbingo-section__inner">
			<div class="wpbingo-lookbook__contents bwp_slider-carousel{% if section.settings.half_slider != blank %} bwp_slick-margin-mobile{% endif %}">
				<div class="js-carousel slick-carousel" data-nav="{{ nav }}" data-dots="{{ dot }}" data-infinite="{{ infinite }}"
				data-autoplay="{{ autoplay }}"
				data-autoplayspeed="{{ autoplay_speed }}"
				data-columns="{{ columns }}"
				data-column1440="{{ column1440 }}"
				data-column1="{{ column1 }}"
				data-column2="{{ column2 }}"
				data-column3="{{ column3 }}"
				data-column4="{{ column4 }}">
					{%- assign id = 0 -%}
					{%- for block in section.blocks -%}
						{% if block.type == 'image' %}
							{%- assign j = 1 -%}
							{%- assign i = 1 -%}
							{%- assign image 	= block.settings.image -%}
							{%- assign name 	= block.settings.name -%}
							{%- assign modulo = i | modulo:rows -%}
							{%- if modulo == 1 or rows == 1-%}
								<div class="wpbingo-lookbook__item">
							{%- endif -%}
								<div class="lookbook-card">
									<div class="lookbook-image">
										<a href="{{ block.settings.url_lookbook }}">
											{%- if image != blank -%}
												{% include 'img-global' with image: image, class: "featured-lookbook__img", effect: "fade-in" %}
											{%- else -%}
												<img class="lazyload fade-in" src="https://placehold.jp/450x450.png" width="450" height="450" />
											{%- endif -%}
										</a>
									</div>
									{%- for block in section.blocks -%}
										{% if block.type == 'item' %}
											{%- assign name_pin = block.settings.name_pin -%}
											{%- assign product_handle = block.settings.product -%}
											{%- assign top = block.settings.top -%}
											{%- assign left = block.settings.left -%}
											{% if name_pin == name %}
												<div class="lookbook-card__item" style="top: {{ top }}%; left: {{ left }}%;">
													<div class="lookbook-card__point">
														<div class="lookbook-card__button">
															<button class="lookbook-card__btn" data-toggle="modal" data-target="lookbook-{{ section.id }}-{{ id }}">
																<span>{{ j }}</span>
															</button>
														</div>
													</div>
												</div>
												{%- assign j = j | plus: 1 -%}
												{%- assign id = id | plus: 1 -%}
											{%- endif -%}
										{%- endif -%}
									{%- endfor -%}
								</div>
							{%- if modulo == 0 or forloop.last == true -%}
								</div>
							{%- endif -%}
							{%- assign i = i | plus: 1 -%}
						{%- endif -%}
					{%- endfor -%}
				</div>
			</div>
        </div>
    </div>
	{%- assign id = 0 -%}
	{%- for block in section.blocks -%}
		{% if block.type == 'item' %}
			{%- assign name_pin = block.settings.name_pin -%}
			{%- assign product_handle = block.settings.product -%}
			{%- assign alignment = block.settings.display -%}
			{%- render 'lookbook-item', product: all_products[product_handle], alignment: alignment, id: id -%}
			{%- assign id = id | plus: 1 -%}
		{%- endif -%}
	{%- endfor -%}
</section>
